<%- model_class = Worker -%>
<div class="page-header">
  <%= link_to t('.new', :default => t("helpers.links.new")), new_worker_path, :class => 'btn btn-primary pull-right' %>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="row">
  <form id="skill_form">
    <% Skill.all.each do |skill| %>
      <div class="col-xs-6 col-md-2">
        <label class="radio-inline">
          <input type="checkbox" name="skill" id="skill_<%= skill.id %>" class="skill" value="<%= skill.name %>"> <%= skill.name %>
        </label>
      </div>
    <% end %>
  </form>
</div>

<hr />

<table class="table table-striped datatable" id="data" data-source="<%= search_workers_url(format: "json") %>">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:age) %></th>
      <th><%= model_class.human_attribute_name(:salary) %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
